# Create ACR secret
# Run: kubectl create secret docker-registry acr-secret \
#   --docker-server=<ACR_LOGIN_SERVER> \
#   --docker-username=<ACR_USERNAME> \
#   --docker-password=<ACR_PASSWORD> \
#   --namespace=<NAMESPACE>

apiVersion: v1
kind: Secret
metadata:
  name: acr-secret
  namespace: default
type: kubernetes.io/dockerconfigjson
data:
  # This will be generated by kubectl create secret command
  .dockerconfigjson: <BASE64_ENCODED_DOCKER_CONFIG>

